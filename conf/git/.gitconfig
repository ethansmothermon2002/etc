[user]
  email = mail@roosta.sh
  user = roosta
  name = Daniel Berg
[core]
  editor = vim
  excludesfile = ~/.globalignore
[push]
  default = simple
[credential]
	helper = cache --timeout=3600
[diff]
	tool = vimdiff
[alias]
  s         = status
  b         = branch
  c         = commit
  a         = add -A
  d         = diff
  dc        = diff --cached
  wd        = diff --word-diff
  precommit = diff --cached --diff-algorithm=minimal -w
  logs      = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  logd      = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit -p
  logl      = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  graph     = log --graph -10 --branches --remotes --tags  --format=format:'%Cgreen%h %Cresetâ€¢ %<(75,trunc)%s (%cN, %cr) %Cred%d' --date-order
  branches  = branch -a
  tags      = tag
  stashes   = stash list
  unstage   = reset HEAD --
  discard   = checkout -- .
  fuck      = !git reset --hard HEAD && git clean -d -f
  uncommit  = reset --mixed HEAD~
  amend     = commit --amend
	last      = cat-file commit HEAD
  ctags     = !.git/hooks/ctags
  last-sha  = rev-parse --short HEAD
[init]
  templatedir = ~/.git_template
[merge]
	tool = vimdiff
[commit]
	verbose = true
[include]
  path = ~/.gitconfig.local
[github]
	user = roosta
