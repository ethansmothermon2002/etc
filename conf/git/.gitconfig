[user]
  email = mail@roosta.sh
  user = roosta
  name = Daniel Berg
[core]
  editor = nvim
  excludesfile = ~/.globalignore
  pager = diff-so-fancy | vimpager
[push]
  default = simple
[credential]
  helper = cache --timeout=3600
[diff]
  tool = ediffclient
[alias]
  s         = status
  b         = branch
  c         = commit
  a         = add -A
  d         = diff
  dc        = diff --cached
  wd        = diff --word-diff
  precommit = diff --cached --diff-algorithm=minimal -w
  logs      = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  logd      = log --graph --patch
  logl      = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %C(bold blue)<%an>%Creset%n%ci - %Cgreen%cr%Creset%n%s %Creset%n%n%C(white)%b%Creset' --decorate --numstat --summary
  branches  = branch -a
  tags      = tag
  stashes   = stash list
  unstage   = reset HEAD --
  discard   = checkout -- .
  uncommit  = reset --mixed HEAD~
  amend     = commit --amend
  last      = cat-file commit HEAD
  ctags     = !.git/hooks/ctags
  last-sha  = rev-parse --short HEAD
[init]
  templatedir = ~/.git_template
[merge]
  tool = emergeclient
[commit]
  verbose = true
  gpgsign = true
[include]
  path = ~/.gitconfig.local
[github]
  user = roosta
[magithub]
  online = true
[magithub "status"]
  includeStatusHeader = true
  includePullRequestsSection = true
  includeIssuesSection = true
[diff-so-fancy]
  rulerWidth = 47
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
