[
// Primary {{{
  {
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    // "height": 10, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    // "spacing": 4, // Gaps between modules (4px)
    // Choose the order of the modules
    // "modules-center": [
    //   "sway/window"
    // ],
    "output": "DP-3",
    "name": "primary",
    "include": [
      "~/.config/waybar/shared-modules.json"
    ],
    "modules-left": [
      "sway/workspaces",
      "sway/mode",
      // "custom/media",
      "sway/scratchpad"
    ],
    "modules-right": [
      "sway/language",
      "keyboard-state",
      "network",
      "pulseaudio",
      // "custom/updates",
      "cpu",
      "memory",
      "temperature",
      "clock",
      "privacy",
      "idle_inhibitor",
      "custom/power"
    ],
    // Modules configuration
    "keyboard-state": {
      "capslock": true,
      "format": "{icon} {name}",
      "format-icons": {
        "locked": "ÔÄ£",
        "unlocked": "ÔÇú"
      }
    },
    "sway/mode": {
      "format": "ÔÄì  {}"
    },
    "sway/language": {
      "format": "ÔÑú {long}",
      "on-click": "swaymsg input type:keyboard xkb_switch_layout next"
    },
    "sway/window": {
      "max-length": 50,
      "all-outputs" : true
    },
    "sway/scratchpad": {
      "format": "{icon} {count}",
      "show-empty": false,
      "format-icons": ["", "Ôãí "],
      "tooltip": true,
      "tooltip-format": "{app}: {title}"
    },
    "idle_inhibitor": {
      "format": "{icon}",
      "format-icons": {
        "activated": "ÔÅÆ",
        "deactivated": "ÔÅ∞"
      }
    },
    "clock": {
        // "timezone": "America/New_York",
        // "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "ÔÄó {:%H:%M}",
        "tooltip": false,
        "format-alt": "Ôëï {:%A %d. %B %Y  ÔÄó %H:%M}"
    },
    "cpu": {
      "format": "Ôíº {usage}%",
      "tooltip": false
    },
    "memory": {
      "format": "Ôîû {}%"
    },
    "temperature": {
        // "thermal-zone": 2,
        // "format-critical": "{temperatureC}¬∞C {icon}",
        "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        "format": "{icon} {temperatureC}¬∞C",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
    },
    "network": {
        // "tooltip-format": "{ipaddr}/{cidr} Ôûñ",
        // "format-linked": "{ifname} (No IP) Ôûñ",
        // "format-disconnected": "Disconnected ‚ö†",
        // "format-alt": "Û∞õ≥  {ifname}: {ipaddr}/{cidr}"
        "interface": "tun0",
        "format-ethernet": "Û∞±ì VPN",
        "format-disconnected": "Û∞Öõ VPN",
        "tooltip-format": "Û∞õ≥  {ifname}: {ipaddr}/{cidr}",
        "tooltip-format-disconnected": "Disconnected ‚ö†"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{icon} {volume}%  {format_source}",
        "format-bluetooth": "{volume}% {icon} Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö©  {icon} Ôäî {format_source}",
        "format-muted": "Ôö©  {format_source}",
        "format-source": "ÔÑ∞ {volume}%",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
          "headphone": "ÔÄ•",
          "hands-free": "Ôñê",
          "headset": "Ôñê" ,
          "phone": "ÔÇï" ,
          "portable": "ÔÇï",
          "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },
    "custom/media": {
      "format": "{icon} {}",
      "return-type": "json",
      "max-length": 40,
      "format-icons": {
        "spotify": "ÔÜº",
        "default": "üéú"
      },
      "escape": true,
      // "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
      "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "custom/power": {
      "format" : "Û∞ê•",
      "tooltip": false,
      "menu": "on-click",
      "menu-file": "$HOME/.config/waybar/power-menu.xml", // Menu file in resources folder
      "menu-actions": {
        "shutdown": "shutdown",
        "reboot": "reboot",
        "logout": "swaymsg exit",
        "lock": "swaylock -f -i /home/roosta/backgrounds/footer_lodyas.png -t",
        "suspend": "systemctl suspend",
        "hibernate": "systemctl hibernate"
      }
    },
    "privacy": {
      "icon-spacing": 4,
      "icon-size": 18,
      "transition-duration": 250,
      "modules": [
        {
          "type": "screenshare",
          "tooltip": true,
          "tooltip-icon-size": 24
        },
        {
          "type": "audio-out",
          "tooltip": true,
          "tooltip-icon-size": 24
        },
        {
          "type": "audio-in",
          "tooltip": true,
          "tooltip-icon-size": 18
        }
      ]
    },
    "custom/updates": {
      "format": "{icon} {}",
      "return-type": "json",
      "format-icons": {
        "has-updates": "Û±ç∑ ",
        "updated": "Û∞Ç™ "
      }
      // "exec-if": "which waybar-module-pacman-updates",
      // "exec": "waybar-module-pacman-updates --interval-seconds 5 --network-interval-seconds 300"
    }
  },
  // }}}
  // Secondary {{{
  {
    "output": "DP-1",
    "name": "secondary",
    "include": [
      "~/.config/waybar/shared-modules.json"
    ],
    "modules-left": [
      "tray",
      "sway/workspaces"
    ],
    "tray": {
      // "icon-size": 21,
      "spacing": 10
    }
  },
  // }}}
  // Tertiary {{{
  {
    "output": "DP-2",
    "name": "tertiary",
    "include": [
      "~/.config/waybar/shared-modules.json"
    ],
    "modules-left": [
      "sway/workspaces"
    ]
  },
  // }}}
  // Quaternary {{{
  {
    "output": "HDMI-A-1",
    "name": "quaternary",
    "position": "bottom",
    "include": [
      "~/.config/waybar/shared-modules.json"
    ],
    "modules-left": [
      "sway/workspaces"
    ],
    "modules-center": [
      "sway/window"
    ]
  }
  // }}}
]

