set noscrollbars
set loadplugins
set complete=ltsS
set focuscontent
set suggestengines=duckduckgo
set defsearch=duckduckgo
set hintmatching=fuzzy
set status=ssl,input,location,bookmark,history,tabcount,position,zoomlevel
set gui=none

