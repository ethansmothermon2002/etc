;; Polybar config for use with multiple monitors over different hosts.
;; Author: Daniel Berg <mail@roosta.sh>

;; The host is set using an external script when launching polybar
;; https://github.com/roosta/utils/blob/master/launch-polybar.sh

[colors]
;; Fetch colors from xresources
;; https://github.com/roosta/vim-srcery/tree/master/term_colors
black         = ${xrdb:color0:#1C1B19}
brightblack   = ${xrdb:color8:#2D2B28}
red           = ${xrdb:color1:#FF3128}
brightred     = ${xrdb:color9:#F75341}
green         = ${xrdb:color2:#519F50}
brightgreen   = ${xrdb:color10:#98BC37}
yellow        = ${xrdb:color3:#FBB829}
brightyellow  = ${xrdb:color11:#FED06E}
blue          = ${xrdb:color4:#5573A3}
brightblue    = ${xrdb:color12:#8EB2F7}
magenta       = ${xrdb:color5:#E02C6D}
brightmagenta = ${xrdb:color13:#E35682}
cyan          = ${xrdb:color6:#0AAEB3}
brightcyan    = ${xrdb:color14:#53FDE9}
white         = ${xrdb:color7:#918175}
brightwhite   = ${xrdb:color15:#FCE8C3}
orange        = ${xrdb:color166:#D75F00}
bright-orange = ${xrdb:color208:#FF8700}
hard-black    = ${xrdb:color232:#080808}
xgrey1        = ${xrdb:color235:#262626}
xgrey2        = ${xrdb:color236:#303030}
xgrey3        = ${xrdb:color237:#3A3A3A}
xgrey4        = ${xrdb:color238:#444444}
xgrey5        = ${xrdb:color239:#4E4E4E}

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

[bar/lintilla-primary]
;; Set a config for each screen @ host lintilla
;; Multiple monitors with different resolutions
monitor = ${env:MONITOR:DP-1}
width = 100%
separator = │
dpi = 192
height = 34
radius = 0
fixed-center = true
background = ${colors.brightblack}
foreground = ${colors.white}
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0
font-0 = "Iosevka:pixelsize=9;4"
font-1 = "Iosevka:pixelsize=9:weight=bold;4"
font-2 = "fura code nerd font:pixelsize=11;4"
font-3 = "fura code nerd font:pixelsize=14;4"
font-4 = "Material Icons:pixelsize=10;4"
modules-left = i3 xwindow
modules-center = mpd
modules-right = keyboard-layout vpncheck pkg volume memory cpu date time

[bar/lintilla-secondary]
;; Secondary monitor @ lintilla, max resolution is 1920x1080 so font sizes and
;; dpi needs to be adjusted accortingly
inherit = bar/lintilla-primary
monitor = ${env:MONITOR:DVI-I-1}
font-0 = "Iosevka:pixelsize=10;2"
font-4 = "Material Icons:pixelsize=12;3"
dpi = 96
height = 18
modules-center =
modules-right = eth-lintilla fs-home fs-root
tray-position = right
tray-padding = 1
tray-scale = 1
tray-background = ${colors.brightblack}

[bar/lintilla-tertiary]
inherit = bar/lintilla-primary
dpi = 96
height = 18
modules-center =
font-0 = "Iosevka:pixelsize=10;2"
font-4 = "Material Icons:pixelsize=12;3"
modules-right =
monitor = ${env:MONITOR:HDMI-0}

[bar/allitnil]
inherit = bar/lintilla-primary
height = 24
dpi = 140
monitor = ${env:MONITOR:eDP-1}
modules-center =
tray-position = right
font-0 = "Iosevka:pixelsize=9;2"
modules-right = keyboard-layout vpncheck wifi battery pkg volume-small memory-small cpu-small date time

[bar/garkbit-primary]
inherit = bar/lintilla-primary
monitor = ${env:MONITOR:DP1}
modules-center = mpd
modules-right = keyboard-layout pkg volume memory cpu date time

[bar/garkbit-secondary]
dpi = 96
height = 18
font-0 = "Iosevka:pixelsize=10;1"
font-1 = "Iosevka:pixelsize=9:weight=bold;1"
font-4 = "Material Icons:pixelsize=10;3"
inherit = bar/lintilla-primary
tray-position = right
tray-padding = 1
tray-scale = 1
monitor = ${env:MONITOR:HDMI2}
modules-right = eth-garkbit fs-home fs-root

[module/i3]

type = internal/i3

; Sort the workspaces by index instead of the default
index-sort = true

; Create click handler used to focus workspace
enable-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

; This will strip numbers preceding ':' from the workspace name
strip-wsnumbers = true

format = <label-state><label-mode>

label-mode = %mode%
label-mode-padding = 1
label-mode-foreground = ${colors.yellow}

label-focused = %name%
label-focused-font = 2
label-focused-padding = 1
label-focused-foreground = ${colors.brightmagenta}

label-unfocused = %name%
label-unfocused-padding = 1
label-unfocused-foreground = ${colors.white}

label-visible = %name%
label-visible-padding = 1
label-visible-foreground = ${colors.brightwhite}

label-urgent = %name%
label-urgent-padding = 1
label-urgent-background = ${colors.orange}
label-urgent-foreground = ${colors.brightwhite}

[module/xwindow]
type = internal/xwindow
format-foreground = ${colors.white}
label = %title:0:80%
label-padding = 1

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
format = <label-layout> <label-indicator>
format-padding = 1
label-layout = %layout%
label-indicator = %name%
label-indicator-background = ${colors.brightred}
label-indicator-foreground = ${colors.brightwhite}
label-indicator-padding = 1

[module/pkg]
;; Calls a script that checks for pacman and aur package updates
;; https://github.com/roosta/utils/blob/master/pkg.sh
type = custom/script
format-foreground = ${colors.brightwhite}
interval = 90
format = <label>
label = "PKG: %output%"
label-padding-right = 1
label-padding-left = 1
exec = ~/utils/pkg.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

[module/keyboard-layout]
;; Calls a script that checks current keyboard layout, I frequently toggle
;; between Norwegian and American layout, and I need a clear visual indicator
;; for which is active.
;; https://github.com/roosta/utils/blob/master/keyboard-layout.sh
type = custom/script
interval = 1
format-foreground = ${colors.brightwhite}
format = <label>
label = "%output%"
exec = ~/utils/keyboard-layout.sh

[module/vpncheck]
;; Checks if a VPN connection is active and proved a colored indictator
;; https://github.com/roosta/utils/blob/master/vpn.sh
type = custom/script
exec = ~/utils/vpn.sh
; exec-if = pgrep -x openvpn
label-padding = 1
interval = 30
label = "%output%"

[module/volume]
type = internal/volume
format-volume = "<bar-volume> <label-volume>"
format-prefix = ${icons.close}
format-volume-padding = 1
format-muted-padding = 1
format-prefix-font = 4
label-muted = "╸╸╸╸╸╸╸╸╸╸  MUTED "
label-muted-foreground = ${colors.red}
label-volume = "VOL %percentage%%"
label-volume-foreground = ${colors.brightwhite}
ramp-volume-0 = ${icons.volume-ramp-0}
ramp-volume-1 = ${icons.volume-ramp-1}
ramp-volume-2 = ${icons.volume-ramp-2}
ramp-volume-font = 4
ramp-volume-background = ${colors.brightblack}
ramp-volume-foreground = ${colors.brightwhite}
bar-volume-width = 10
bar-volume-fill-foreground = ${colors.brightwhite}
bar-volume-indicator-foreground = ${colors.brightgreen}
bar-volume-indicator = ╸
bar-volume-fill = ╸
bar-volume-empty = ╸
bar-volume-empty-foreground = ${colors.white}

[module/volume-small]
;; Create a smaller size volume indicator for smaller displays
inherit = module/volume
format-volume = "<label-volume>"

[module/memory]
type = internal/memory
interval = 2
format = " <bar-used> <label>"
label = "RAM %percentage_used:2%%"
label-foreground = ${colors.brightwhite}
format-padding = 1
bar-used-width = 10
bar-used-fill-foreground = ${colors.brightwhite}
bar-used-indicator-foreground = ${colors.brightmagenta}
bar-used-indicator = ╸
bar-used-fill = ╸
bar-used-empty = ╸
bar-used-empty-foreground = ${colors.white}

[module/memory-small]
;; Smaller memory module for use on smaller resolutions/screens
inherit = module/memory
format = "<label>"

[module/cpu]
type = internal/cpu
interval = 2
format = <bar-load> <label>
label = "CPU %percentage:2%%"
label-foreground = ${colors.brightwhite}
format-padding = 1
bar-load-width = 10
bar-load-fill-foreground = ${colors.brightwhite}
bar-load-indicator-foreground = ${colors.brightcyan}
bar-load-indicator = ╸
bar-load-fill = ╸
bar-load-empty = ╸
bar-load-empty-foreground = ${colors.white}

[module/cpu-small]
inherit = module/cpu
type = internal/cpu
format = <label>

[module/mpd]
type = internal/mpd
format-online-prefix = ""
format-online = <label-song>
format-online-foreground = ${colors.white}
host = localhost
port = 6600
label-song-maxlen = 80
label-song-ellipsis = true

[module/eth]
type = internal/network
interval = 3.0
format-connected-foreground = ${colors.brightwhite}
label-connected = "%downspeed:9%%{T5}%{T-}%upspeed:9%%{T5}%{T-}"
label-connected-padding-left = 0
label-connected-padding-right = 2
accumulate-stats = true
label-disconnected = %ifname% disconnected
format-connected = <label-connected>
format-disconnected = <label-disconnected>

[module/eth-lintilla]
inherit = module/eth
interface = enp9s0

[module/eth-garkbit]
inherit = module/eth
interface = enp2s0

[module/wifi]
type = internal/network
format-connected = WIFI: <label-connected>
format-connected-padding = 1
format-connected-foreground = ${colors.brightwhite}
label-connected = %essid%, %signal%%
interface = wlp2s0

[module/date]
type = internal/date
format-foreground = ${colors.brightwhite}
interval = 5
date = "%Y-%m-%d"
label-padding = 1
label = %date%

[module/time]
type = internal/date
interval = 5
format-foreground = ${colors.brightwhite}
time = %H:%M
; time-alt = %Y-%m-%d
label = %time%
label-padding = 1
label-font = 2

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98
label-discharging-padding = 1
format-discharging-foreground = ${colors.brightwhite}
label-discharging = BAT: %percentage%%
label-full = BAT: %percentage%%
label-charging-padding = 1
format-discharging = <label-discharging>
format-full-foreground = ${colors.brightgreen}
label-charging = BAT: %percentage%%
format-charging-foreground = ${colors.cyan}

[module/fs-root]
type = internal/fs
interval = 25
mount-0 = /
bar-used-width = 10
label-mounted-foreground = ${colors.brightwhite}
bar-used-indicator-foreground = ${colors.yellow}
bar-used-indicator = ╸
bar-used-fill = ╸
bar-used-fill-foreground = ${colors.brightwhite}
bar-used-empty = ╸
bar-used-empty-foreground = ${colors.white}
format-mounted = <bar-used> <label-mounted>
format-mounted-padding = 1
format-unmounted-padding = 1
label-mounted = %mountpoint% %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.yellow}

[module/fs-home]
type = internal/fs
interval = 25
inherit = module/fs-root
mount-0 = /home
bar-used-indicator-foreground = ${colors.blue}

; vim:ft=dosini
