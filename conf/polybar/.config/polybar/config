[module/i3]
type = internal/i3

; Sort the workspaces by index instead of the default
index-sort = true

; Create click handler used to focus workspace
enable-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

; This will split the workspace name on ':'
strip-wsnumbers = true

; Use fuzzy (partial) matching on labels when assigning 
; icons to workspaces
; Example: code;♚ will apply the icon to all workspaces 
; containing 'code' in the label
; Default: false
; fuzzy-match = true

; ws-icon-0 = 1:term;Q
format = <label-state><label-mode> 

label-mode = %mode%
label-mode-padding = 1
label-mode-foreground = ${colors.brightwhite}
label-mode-background = ${colors.blue}

label-focused = %name%
label-focused-padding = 1
label-focused-background = ${colors.magenta}
label-focused-foreground = ${colors.brightwhite}

label-unfocused = %name% 
label-unfocused-padding = 1
label-unfocused-background = ${colors.brightblack}
label-unfocused-foreground = ${colors.brightwhite}

label-visible = %name%
label-visible-padding = 1
label-visible-background = ${colors.brightwhite}
label-visible-foreground = ${colors.black}

label-urgent = %name%
label-urgent-padding = 1
label-urgent-background = ${colors.orange}
label-urgent-foreground = ${colors.brightwhite}

