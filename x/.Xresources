! ==== Fontselect ====
! --------------------

! tty0p regular
URxvt.font:-uw-ttyp0-medium-r-normal--15-140-75-75-c-80-iso10646-1
URxvt.imFont:-uw-ttyp0-medium-r-normal--15-140-75-75-c-80-iso10646-1
URxvt.boldFont:-uw-ttyp0-bold-r-normal--15-140-75-75-c-80-iso10646-1

! ttyp0 italic
URxvt.italicFont:-uw-ttyp0-medium-i-normal--15-140-75-75-c-80-iso10646-1
URxvt.boldItalicFont:-uw-ttyp0-medium-i-normal--15-140-75-75-c-80-iso10646-1

! PragmataPro Bold
!URxvt.boldItalicFont:xft:Essential\ PragmataPro:Bold\ Italic:pixelsize=14

! dejavu italic
!URxvt.italicFont:xft:DejaVu\ Sans\ Mono\ for\ Powerline:oblique:pixelsize=14
!URxvt.boldItalicFont:xft:DejaVu\ Sans\ Mono\ for\ Powerline:oblique:pixelsize=14

! gohu regular 
!URxvt.font:-gohu-gohufont-medium-r-*--14-100-*-*-*-*-iso10646-1
!URxvt.imFont:-gohu-gohufont-medium-r-*--14-100-*-*-*-*-iso10646-1
!URxvt.boldFont:-gohu-gohufont-bold-r-*--14-100-*-*-*-*-iso10646-1

!URxvt*letterSpace: -1
URxvt*saveLines: 12000
URxvt*scrollBar: false

!URL matching, use alt-u to enter select mode
URxvt.perl-ext: default,url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.rend.0: Uline Bold fg5

! fade unfocused term
URxvt*fading: 30

! Meta (Alt) + keypress to set the 8th bit
URxvt*meta8: true

! scroll single lines with shift+up/down
! http://unix.stackexchange.com/questions/44756/urxvt-scroll-just-one-line
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007

! fix pager scrolling issue
! https://wiki.archlinux.org/index.php/Rxvt-unicode#Scrollback_buffer_in_secondary_screen
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

#include "/home/daniel/.Xcolors/sweetlove.Xresources"

