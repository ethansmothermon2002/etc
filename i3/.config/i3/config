# --- 1.1 - startup 

# turn off screen after 5minutes
#exec --no-startup-id xset dpms 450

exec firefox
exec urxvtc --meta8

# register screen locker
exec --no-startup-id xss-lock -- i3lock -ti /usr/local/share/backgrounds/patterns/pattern-05.png &

# set background image via qiv
exec --no-startup-id qiv -y /usr/local/share/backgrounds/patterns/pattern-02.jpg

# --- 1.2 - general config 

# set window border size
new_window 1pixel
new_float 1pixel

# no focus at mouse pointer since touchpad makes this infuriating
focus_follows_mouse no


# --- 1.3 - fonts 

