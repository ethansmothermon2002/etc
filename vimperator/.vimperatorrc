" 3.9 (created: 2015/02/15 15:49:05)
" vim:filetype=vimperator
colorscheme sweetlove
set noscrollbars
set loadplugins
set complete=ltsS
set focuscontent
set defsearch=duckduckgo
set hintmatching=fuzzy
set status=ssl,input,location,bookmark,history,tabcount,position
source! /home/daniel/.vimperatorrc.local

" map l and h to tab movement
noremap l gt
noremap h gT

" go to last active tab.
noremap L <C-^>
noremap H <C-^>

" some quick movement maps
nnoremap j       8j
nnoremap k       8k
nnoremap J       16j
nnoremap K       16k
nnoremap <C-j>   24j
nnoremap <C-k>   24k
nnoremap <C-S-j> 40j
nnoremap <C-S-k> 40k

" change delete tab behaviour.
nnoremap dd :bd -select lastactive<CR>
nnoremap d<Left> :bd -select left<CR>
nnoremap d<Right> :bd -select right<CR>
nnoremap dh :bd -select left<CR>
nnoremap dl :bd -select right<CR>

" noscript integration
noremap <leader>s :noscript popup<CR>
noremap <leader>S :noscript popup<CR>

" toggle bookmark sidebar
noremap <leader>b :emenu View.Sidebar.Bookmarks<CR>

" source config file
noremap <c-w>r :source /home/daniel/.vimperatorrc<CR>

