colorscheme light_fantastic
set noscrollbars
set loadplugins
set complete=ltsS
set focuscontent
set defsearch=duckduckgo
set hintmatching=fuzzy
set status=ssl,input,location,bookmark,history,tabcount,position
source! /home/roosta/.vimperatorrc.local


" To Enable map <Space>
js <<EOM
window.addEventListener('keypress',function (event) {
    var code=event.charCode;
    if ((liberator.mode === modes.INSERT && modes.extended === modes.MENU)
        ||(liberator.mode ==modes.NORMAL && code==32)
        ||(liberator.mode ==modes.COMMAND_LINE && code !=32)){
    let map = mappings.get(liberator.mode, events.toString(event));
    if (map) {
      event.preventDefault();
      event.stopPropagation();
      map.execute();
    }
  }
},false);
EOM

map <Space> <Leader>

" map l and h to tab movement
" this removes horizontal h&l movement but arrows still work
noremap l gt
noremap h gT

noremap } gt
noremap { gT

map <leader>R :source ~/.vimperatorrc<CR>

" go to last active tab.
noremap gp <C-^>
noremap L  <C-^>

" some quick vertical movement maps
nnoremap j        8j
nnoremap k        8k
nnoremap J        16j
nnoremap K        16k
nnoremap <C-j>    24j
nnoremap <C-k>    24k
nnoremap <C-S-j>  40j
nnoremap <C-S-k>  40k
nnoremap <C-Up>   24k
nnoremap <C-Down> 24j

" change delete tab behaviour.
" choose direction to go with movement after deleting a tab
" dd to go to last active
nnoremap dd          :bd -select lastactive<CR>
nnoremap d<Left>     :bd -select left<CR>
nnoremap d<Right>    :bd -select right<CR>
nnoremap d<PageUp>   :bd -select left<CR>
nnoremap d<PageDown> :bd -select right<CR>
nnoremap dh          :bd -select left<CR>
nnoremap dl          :bd -select right<CR>

" escape cancle tab delete
nnoremap d<Escape> <Nop>

" noscript integration
noremap <leader><leader> :noscript popup<CR>

" bind some firefox menus
noremap <leader>bm :emenu View.Sidebar.Bookmarks<CR>
noremap <leader>dl :emenu Tools.Downloads<CR>

" session manager shortcuts
noremap <leader>ss :emenu Tools.Session Manager.Save Session...<CR>
noremap <leader>sl :emenu Tools.Session Manager.Load Session...<CR>

" select all on a page.
noremap <c-a> i<c-a>

" source config file
noremap <leader>R :source ~/.vimperatorrc<CR>

noremap <leader>ds :nohlsearch<CR>
noremap <leader>st :stylish toggle<CR>
noremap <leader>sp :stylish popup<CR>

" use up/down when in cmdmode to select completions
" note: use shift-movement to move in command history
cmap <Down> <Tab>
cmap <Up> <S-Tab>

